{
    // Configuración de lanzamientos para Tláloc App con Flutter
    "version": "0.2.0",
    "configurations": [
        {
            "name": "tlaloc (debug mode - web)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "args": ["--web-port", "5000"],
            "program": "lib/main.dart"
        },
        {
            "name": "tlaloc (profile mode - web)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile",
            "args": ["--web-port", "5000"],
            "program": "lib/main.dart"
        },
        {
            "name": "tlaloc (release mode - web)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release",
            "args": ["--web-port", "5000"],
            "program": "lib/main.dart"
        }
    ]
}
